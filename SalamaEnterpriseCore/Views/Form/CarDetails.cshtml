                    </select>
                </div>

            </div>

            <div class="col-6">
                <div class="card p-2 pt-5 pb-5">

                    <div>
                        <a href="#"><i class="fa fa-car me-2"></i>Vehicle Information</a>
                        <hr>
                    </div>
                    <div>

                        <a href="#"> <i class="fa fa-gear me-2"></i>Driver Detail</a>
                        <hr>
                    </div>

                </div>
            </div>
        </div>
    </div>
