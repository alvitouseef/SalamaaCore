                    <select id="ddlCarMake" class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                    </select>
                </div>

                <div class="mt-4" style="width: 250px;">
                    <label for="ddlCarModel" class="form-label">Car Model</label>
                    <select id="ddlCarModel" class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>

                    </select>
                </div>

                <div class="mt-4" style="width: 250px;">
                    <label for="ddlCarBody" class="form-label">Car Body Type</label>
                    <select id="ddlCarBody" class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>

                    </select>
                </div>

                <div class="mt-4" style="width: 250px;">
                    <label for="ddlTrim" class="form-label">Trim</label>
                    <select id="ddlTrim" class="form-select" aria-label="Default select example">
